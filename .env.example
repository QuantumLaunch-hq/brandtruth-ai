# BrandTruth AI - Environment Variables
# Copy to .env and fill in your values

# Required for Slice 1-2 (Brand Extraction, Copy Generation)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Required for Slice 3 (Image Matching)
# Fallback chain: Pexels -> Unsplash -> Azure DALL-E
PEXELS_API_KEY=your-pexels-key                    # Free at https://www.pexels.com/api/
UNSPLASH_ACCESS_KEY=your-unsplash-access-key       # Free at https://unsplash.com/developers

# Azure OpenAI DALL-E 3 (uses Azure credits - optional)
# Get from Azure Portal > Azure OpenAI > Keys and Endpoint
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_DALLE_DEPLOYMENT=dall-e-3                   # Your DALL-E deployment name

# Required for Slice 8-9 (Meta Integration)
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_ACCESS_TOKEN=your-meta-access-token
META_AD_ACCOUNT_ID=act_your-ad-account-id

# Optional: For Modal deployment
MODAL_TOKEN_ID=your-modal-token-id
MODAL_TOKEN_SECRET=your-modal-token-secret

# Optional: Development settings
DEBUG=true
LOG_LEVEL=INFO
